@model Group

<form method="post"> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Group</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Name</label>
            <input asp-for="Name" class="form-control"/>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Add</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Group" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div>
        
    </div>
</form>