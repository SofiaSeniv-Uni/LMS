@model List<Group>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Group List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Group" asp-action="Create" class="btn btn-primary">Add new group</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Group" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary" mx-2>
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Group" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-secondary" mx-2>
                                <i class="bi bi-pencil-square"></i> Details
                            </a>
                            <a asp-controller="Group" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger" mx-2>
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>