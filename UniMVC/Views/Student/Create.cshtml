@model Student

<form method="post"> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Student</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Name</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Surname</label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Group</label>
            <select asp-for="GroupId" asp-items="ViewBag.GroupList" class="form-select">
                <option disabled selected>Select Group</option>
            </select>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Add</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div>
        
    </div>
</form>